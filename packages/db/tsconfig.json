{
   "compilerOptions": {
      "lib": [
         "ES2015"
      ],
      "target": "ES2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "importHelpers": true,
      "composite": true
   },
   "include": [
      "src/**/**/*"
   ],
   "exclude": [
      "node_modules"
   ]
}
